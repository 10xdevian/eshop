
generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")

}
//create a DB design for an e-commerce application


//------------------------------- User Model started -------------------------------
// avatar images
model images{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  file_id  String
  url     String
  userId  String?  @unique  @db.ObjectId
  users  users? @relation(fields: [userId], references: [id])
}
// //user details
model users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String?
  following String[]
  avatar    images?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  imagesId String?  @db.ObjectId

}
// //------------------------------- User Model ended -------------------------------
